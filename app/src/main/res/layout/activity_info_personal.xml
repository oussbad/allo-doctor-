<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Info_Personal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/images"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"/>


    <TextView
        android:id="@+id/bonjour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bonjour "
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_margin="20dp"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">



           <com.google.android.material.textfield.TextInputLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:boxStrokeColor="#000"
               android:theme="@style/TextInputLayoutStyle"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
               app:hintTextAppearance="@style/appTheme">

               <com.google.android.material.textfield.TextInputEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/nom"
                   android:hint="entrer ton nom complet"
                   android:drawableStart="@drawable/ic_baseline_create_24"
                   android:padding="10dp"
                   android:inputType="text"
                   android:textColor="#000"
                   android:textSize="18sp"
                   android:layout_marginBottom="20dp">

               </com.google.android.material.textfield.TextInputEditText>



           </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:theme="@style/TextInputLayoutStyle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:hintTextAppearance="@style/appTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/age"
                    android:hint="entrer ton age"
                    android:drawableStart="@drawable/ic_baseline_create_24"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp">

                </com.google.android.material.textfield.TextInputEditText>



            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:theme="@style/TextInputLayoutStyle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:hintTextAppearance="@style/appTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/numero"
                    android:hint="entrer ton numero"
                    android:drawableStart="@drawable/ic_baseline_phone_android_24"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp">

                </com.google.android.material.textfield.TextInputEditText>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:theme="@style/TextInputLayoutStyle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:hintTextAppearance="@style/appTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:hint="entrer ton email"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp">

                </com.google.android.material.textfield.TextInputEditText>



            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:theme="@style/TextInputLayoutStyle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:hintTextAppearance="@style/appTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cin"
                    android:hint="entrer ton CIN"
                    android:drawableStart="@drawable/ic_baseline_assignment"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp">

                </com.google.android.material.textfield.TextInputEditText>



            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:theme="@style/TextInputLayoutStyle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:hintTextAppearance="@style/appTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adress"
                    android:hint="entrer ton adress"
                    android:drawableStart="@drawable/house"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp">

                </com.google.android.material.textfield.TextInputEditText>



            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="#000"
                android:theme="@style/TextInputLayoutStyle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:hintTextAppearance="@style/appTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/civilite"
                    android:hint="entrer ton civilite"
                    android:drawableStart="@drawable/escalator"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp">

                </com.google.android.material.textfield.TextInputEditText>



            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="next"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                />





        </LinearLayout>














    </LinearLayout>

</ScrollView>